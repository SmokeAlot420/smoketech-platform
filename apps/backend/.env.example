# ====================================
# PATH CONFIGURATION (CRITICAL)
# ====================================
# Replace hardcoded Windows paths with these environment variables
# Default values use relative paths for cross-platform compatibility

# Path to omega-platform repository (for cross-repo integration)
OMEGA_PLATFORM_PATH=../omega-platform

# Path to omega-platform public directory (for accessing generated content)
OMEGA_PUBLIC_PATH=../omega-platform/public

# Base output directory for all generated content
OUTPUT_BASE_PATH=./generated

# Service-specific output paths (relative to OUTPUT_BASE_PATH or absolute)
VEO3_OUTPUT_PATH=./generated/veo3
SORA2_OUTPUT_PATH=./generated/sora2
NANOBANANA_OUTPUT_PATH=./generated/vertex-ai/nanoBanana
STITCHED_OUTPUT_PATH=./generated/stitched
ENHANCED_OUTPUT_PATH=./generated/enhanced

# ====================================
# GOOGLE CLOUD VERTEX AI
# ====================================
# REQUIRED - Uses $1,000 Google Cloud credits!
# Both NanoBanana (image generation) and VEO3 (video generation) use Vertex AI

# Google Cloud Project ID
GCP_PROJECT_ID=viral-ai-content

# Google Cloud Location (us-central1 recommended)
GCP_LOCATION=us-central1

# Path to service account JSON key (use relative path for portability)
# Relative example: ./vertex-ai-key.json
# Absolute example: /path/to/vertex-ai-key.json
GOOGLE_APPLICATION_CREDENTIALS=./vertex-ai-key.json

# Legacy - No longer needed (migrated to Vertex AI above)
# GEMINI_API_KEY=your_gemini_api_key_here
# VEO3_API_ENDPOINT=https://api.veo3.ai/v1
# VEO3_API_KEY=your_veo3_api_key_here

# Langfuse Monitoring (Local Self-Hosted)
LANGFUSE_PUBLIC_KEY=your_langfuse_public_key
LANGFUSE_SECRET_KEY=your_langfuse_secret_key
LANGFUSE_URL=http://localhost:3030

# Temporal Configuration
TEMPORAL_ADDRESS=localhost:7233
TEMPORAL_NAMESPACE=default

# Database
DATABASE_URL=mongodb://localhost:27017/viral-ai
REDIS_URL=redis://localhost:6379

# Platform APIs
TIKTOK_API_KEY=your_tiktok_api_key
TIKTOK_API_SECRET=your_tiktok_api_secret
INSTAGRAM_API_KEY=your_instagram_api_key
INSTAGRAM_API_SECRET=your_instagram_api_secret
YOUTUBE_API_KEY=your_youtube_api_key
YOUTUBE_CLIENT_ID=your_youtube_client_id
YOUTUBE_CLIENT_SECRET=your_youtube_client_secret

# AWS S3 for Storage
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=viral-content-storage

# Proxy Configuration
PROXY_POOL_ENDPOINTS=http://proxy1.com,http://proxy2.com,http://proxy3.com

# Monitoring
METRICS_PORT=9090
LOG_LEVEL=info

# Security
JWT_SECRET=your_jwt_secret_here_min_32_chars
ENCRYPTION_KEY=your_encryption_key_here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Environment
NODE_ENV=development
PORT=3000